class MyRunnable implements Runnable 
{ 
@Override 
public void run() 
{ 
try { 
// Sleep for 500 milliseconds (0.5 seconds) 
Thread.sleep(500); 
System.out.println(Thread.currentThread().getName() + " is 
running."); 
} 
catch (InterruptedException e) 
{ 
System.err.println(Thread.currentThread().getName() + " was interrupted."); 
} 
} 
} 
public class ThreadCreationUsingRunnable 
{ 
public static void main(String[] args) 
{ 
// Create two instances of the MyRunnable class 
MyRunnable myRunnable1 = new MyRunnable(); 
MyRunnable myRunnable2 = new MyRunnable(); 
// Create two threads and pass the runnable instances 
to them Thread thread1 = new Thread(myRunnable1, "Thread 1"); 
Thread thread2 = new Thread(myRunnable2, "Thread 2");
// Start both threads 
thread1.start(); 
thread2.start(); 
} 
}
